<%= render 'layouts/flash' %>
<div class="comment_edit_form">
  <%= form_with(model: [blog, comment]) do |form| %>
    <div class="field">
      <%= form.text_area :description, id: "comment_description_#{blog.id}" %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>

    <%= link_to :back do %>
      戻る
    <% end %>
  <% end %>
</div>
